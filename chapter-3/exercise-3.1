int binary_Search(int x,int arr[],int n) {
    int low, high, mid;
    low = 0;
    high = n - 1;
    mid = (low + high) / 2;
    while (low < high && x!=arr[mid]) {
        if (x < arr[mid]) {
            high = mid - 1;
        } else {
            low = mid + 1;
        }
        mid = (low + high) / 2;
    }
    if (x == arr[mid]) {
        return mid;
    } else {
        return -1;
    }
}
